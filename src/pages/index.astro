---
// src/pages/index.astro
// Frontmatter con metadatos y configuración
import Layout from '../layouts/Layout.astro';
import ContactForm from '../components/ContactForm.astro';
import StatsCard from '../components/StatsCard.astro';
import ServiceCard from '../components/ServiceCard.astro';

// Datos para componentes
const services = [
  {
    title: "Auditoría & Certificación ISO",
    icon: "check",
    color: "blue",
    description: "Auditorías especializadas para certificación internacional con estándares de clase mundial.",
    features: [
      "ISO 9001 (Gestión de Calidad)",
      "ISO 14001 (Gestión Ambiental)",
      "ISO 45001 (Seguridad y Salud)",
      "ISO 27001 (Seguridad de la Información)",
      "ISO 50001 (Gestión Energética)",
      "HACCP y ISO 22000 (Seguridad Alimentaria)"
    ]
  },
  {
    title: "Implementación de Sistemas ISO",
    icon: "gear",
    color: "green",
    description: "Desarrollo completo desde diagnóstico hasta certificación con metodología probada.",
    features: [
      "Diagnóstico inicial y análisis de brechas",
      "Planificación estratégica personalizada",
      "Desarrollo de documentación técnica",
      "Capacitación integral de equipos",
      "Auditoría interna (segunda parte)",
      "Acompañamiento a certificación"
    ]
  },
  {
    title: "Capacitación y Certificación",
    icon: "book",
    color: "orange",
    description: "Formación especializada con certificación de competencias reconocida internacionalmente.",
    features: [
      "Cursos con franquicia SENCE",
      "Formación de auditores internos",
      "Evaluación de competencias",
      "Certificación internacional",
      "Talleres especializados",
      "Capacitación in-company"
    ]
  }
];

const stats = [
  { value: "15+", label: "Años de Experiencia" },
  { value: "500+", label: "Empresas Certificadas" },
  { value: "4", label: "Países de Operación" },
  { value: "98%", label: "Tasa de Éxito" }
];

const clients = [
  { name: "C.Q.S Certification Quality S", country: "" },
  { name: "Grupo IVAC", country: "España" },
  { name: "CMS Consultores", country: "Chile" },
  { name: "AMZU", country: "Chile" },
  { name: "ACONCAP", country: "Perú" },
  { name: "Auditservic", country: "Italia" },
  { name: "Cámara Chileno-Británica", country: "" }
];
---

<Layout 
  title="Global Technology Quality - Consultoría ISO" 
  description="Especialistas en auditoría, implementación y capacitación de sistemas de gestión ISO. Certificaciones ISO 9001, 14001, 45001, 27001 y más."
>
  <!-- Header Navigation -->
  <header class="bg-white border-b border-gray-200 fixed w-full top-0 z-50 backdrop-blur-sm bg-white/95">
    <nav class="max-w-7xl mx-auto px-6 lg:px-8">
      <div class="flex items-center justify-between h-20">
        <!-- Logo -->
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <h1 class="text-2xl font-bold text-slate-800 tracking-tight">
              <span class="text-blue-700">Global</span> Technology Quality
            </h1>
            <p class="text-xs text-gray-500 font-medium tracking-wide">ISO CONSULTING SERVICES</p>
          </div>
        </div>
        
        <!-- Desktop Navigation -->
        <div class="hidden lg:flex items-center space-x-8">
          <a href="#inicio" class="text-gray-700 hover:text-blue-700 font-medium text-sm uppercase tracking-wide transition-colors duration-200">
            Inicio
          </a>
          <a href="#nosotros" class="text-gray-700 hover:text-blue-700 font-medium text-sm uppercase tracking-wide transition-colors duration-200">
            Nosotros
          </a>
          <a href="#servicios" class="text-gray-700 hover:text-blue-700 font-medium text-sm uppercase tracking-wide transition-colors duration-200">
            Servicios
          </a>
          <a href="#contacto" class="bg-blue-700 hover:bg-blue-800 text-white px-6 py-2 rounded-sm font-medium text-sm uppercase tracking-wide transition-colors duration-200">
            Contacto
          </a>
        </div>
        
        <!-- Mobile Menu Button -->
        <div class="lg:hidden">
          <button id="mobile-menu-button" class="text-gray-700 hover:text-blue-700 focus:outline-none" aria-label="Abrir menú" aria-expanded="false">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
        </div>
      </div>
      
      <!-- Mobile Navigation Menu -->
      <div id="mobile-menu" class="lg:hidden hidden border-t border-gray-200">
        <div class="px-2 pt-2 pb-3 space-y-1">
          <a href="#inicio" class="block px-3 py-2 text-gray-700 hover:text-blue-700 font-medium text-sm uppercase tracking-wide">
            Inicio
          </a>
          <a href="#nosotros" class="block px极客时间3 py-2 text-gray-700 hover:text-blue-700 font-medium text-sm uppercase tracking-wide">
            Nosotros
          </a>
          <a href="#servicios" class="block px-3 py-2 text-gray-700 hover:text-blue-700 font-medium text-sm uppercase tracking-wide">
            Servicios
          </a>
          <a href="#contacto" class="block px-3 py-2 text-gray-700 hover:text-blue-700 font-medium text-sm uppercase tracking-wide">
            Contacto
          </a>
        </div>
      </div>
    </nav>
  </header>

  <!-- Hero Principal -->
  <section id="inicio" class="relative bg-slate-50 pt-20">
    <div class="max-w-7xl mx-auto px-6 lg:px-8 py-24 lg:py-32">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <div class="inline-flex items-center px-4 py-2 bg-blue-50 text-blue-700 text-sm font-medium rounded-full mb-6">
            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 极客时间1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.极客时间066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
            Certificación ISO Internacional
          </div>
          <h1 class="text-4xl lg:text-6xl font-bold text-slate-900 leading-tight mb-6">
            Consultoría ISO <span class="text-blue-700">Profesional</span>
          </h1>
          <p class="text-xl text-gray-600 leading-relaxed mb-8 max-w-2xl">
            Ayudamos a empresas e instituciones a implementar, auditar y certificar sistemas de gestión basados en normativas ISO con más de 15 años de experiencia internacional.
          </p>
          <div class="flex flex-col sm:flex-row gap-4">
            <a href="#contacto" class="inline-flex items-center justify-center px-8 py-4 bg-blue-700 hover:bg-blue-800 text-white font-semibold rounded-sm transition-colors duration-200">
              Solicitar Consulta
              <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
              </svg>
            </a>
            <a href="#servicios" class="inline-flex items-center justify-center px-8 py-4 border border-gray-300 hover:border-gray-400 text-gray-700 hover:text-gray-900 font-semibold rounded-sm transition-colors duration-200">
              Ver Servicios
            </a>
          </div>
        </div>
        <div class="relative">
          <div class="bg-white rounded-lg shadow-xl p-8 border border-gray-100">
            <div class="grid grid-cols-2 gap-6">
              {stats.map((stat, index) => (
                <StatsCard 
                  key={index} 
                  value={stat.value} 
                  label={stat.label} 
                  index={index} 
                />
              ))}
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Quiénes Somos -->
  <section id="nosotros" class="py-24 bg-white">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl lg:text-4xl font-bold text-slate-900 mb-4">
          Quiénes Somos
        </h2>
        <div class="w-24 h-1 bg-blue-700 mx-auto"></div>
      </div>
      
      <div class="grid lg:grid-cols-2 gap-16 items-center">
        <div>
          <p class="text-lg text-gray-600 leading-relaxed mb-8">
            Global Technology Quality es una consultora especializada en sistemas de gestión ISO con presencia internacional. Contamos con un equipo de auditores certificados y consultores expertos que trabajan con organizaciones públicas y privadas para implementar, auditar y mantener estándares de calidad de clase mundial.
          </p>
          <p class="text-lg text-gray-600 leading-relaxed mb-8">
            Nuestra red de alianzas estratégicas en Chile, España, Perú e Italia nos permite ofrecer servicios integrales y soluciones adaptadas a cada sector industrial.
          </p>
          
          <div class="bg-slate-50 border-l-4 border-blue-700 p-6 rounded-r-lg">
            <blockquote class="text-lg italic text-gray-700 mb-4">
              "Cada vez que tomo decisiones, trato de reducir los riesgos y problemas que puedan existir…"
            </blockquote>
            <div class="flex items-center">
              <div class="w-12 h-12 bg-blue-700 rounded-full flex items-center justify-center text-white font-bold text-lg mr-4">
                FM
              </div>
              <div>
                <cite class="text-slate-900 font-semibold block">Francisco Medina</cite>
                <span class="text-gray-500 text-sm">CEO, Global Technology Quality</span>
              </div>
            </div>
          </div>
        </div>
        
        <div class="grid grid-cols-2 gap-6">
          <div class="bg-blue-50 p-6 rounded-lg text-center">
            <div class="w-12 h-12 bg-blue-700 rounded-lg flex items-center justify-center mx-auto mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="font-semibold text-slate-900 mb-2">Certificación</h3>
            <p class="text-sm text-gray-600">Auditores certificados internacionalmente</p>
          </div>
          
          <div class="bg-green-50 p-6 rounded-lg text-center">
            <div class="w-12 h-12 bg-green-700 rounded-lg flex items-center justify-center mx-auto mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9v-9m0-9v9"></path>
              </svg>
            </div>
            <h3 class="font-semibold text-slate-900 mb-2">Internacional</h3>
            <p class="text-sm text-gray-600">Presencia en 4 países</p>
          </div>
          
          <div class="bg-orange-50 p-6 rounded-lg text-center">
            <div class="w-12 h-12 bg-orange-700 rounded-lg flex items-center justify-center mx-auto mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
              </svg>
            </div>
            <h3 class="font-semibold text-slate-900 mb-2">Experiencia</h3>
            <p class="text-sm text-gray-600">Más de 15 años en el mercado</p>
          </div>
          
          <div class="bg-purple-50 p-6 rounded-lg text-center">
            <div class="w-12 h-12 bg-purple-700 rounded-lg flex items-center justify-center mx-auto mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
              </svg>
            </div>
            <h3 class="font-semibold text-slate-900 mb-2">Equipo</h3>
            <p class="text-sm text-gray-600">Consultores especializados</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Servicios Principales -->
  <section id="servicios" class="py-24 bg-slate-50">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl lg:text-4xl font-bold text-slate-900 mb-4">
          Nuestros Servicios
        </h2>
        <div class="w-24 h-1 bg-blue-700 mx-auto mb-6"></div>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Ofrecemos servicios integrales de consultoría ISO adaptados a las necesidades específicas de cada organización.
        </p>
      </div>
      
      <div class="grid lg:grid-cols-3 gap-8">
        {services.map((service, index) => (
          <ServiceCard 
            key={index}
            title={service.title}
            icon={service.icon}
            color={service.color}
            description={service.description}
            features={service.features}
            index={index}
          />
        ))}
      </div>
    </div>
  </section>

  <!-- Confían en Nosotros -->
  <section class="py-24 bg-white">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl lg:text-4xl font-bold text-slate-900 mb-4">
          Confían en Nosotros
        </h2>
        <div class="w-24 h-1 bg-blue-700 mx-auto mb-6"></div>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Confían en nosotros organizaciones públicas y privadas de diversos sectores, en Chile y el extranjero.
        </p>
      </div>
      
      <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-7 gap-6">
        {clients.map((client, index) => (
          <div key={index} class="bg-slate-50 border border-gray-200 p-6 rounded-lg hover:shadow-md transition-shadow duration-300 flex items-center justify-center h-24">
            <div class="text-center">
              <span class="text-sm font-semibold text-gray-700 block">{client.name}</span>
              {client.country && <span class="text-xs text-gray-500">{client.country}</span>}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Contacto -->
  <section id="contacto" class="py-24 bg-slate-900 text-white">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl lg:text-4xl font-bold mb-4">
          ¿Tienes un desafío en gestión ISO?
        </h2>
        <div class="w-24 h-1 bg-blue-500 mx-auto mb-6"></div>
        <p class="text-xl text-gray-300 max-w-3xl mx-auto">
          Conversemos sobre cómo podemos ayudarte a alcanzar tus objetivos de certificación.
        </p>
      </div>
      
      <div class="grid lg:grid-cols-2 gap-16">
        <div>
          <h3 class="text-2xl font-bold mb-8">Información de Contacto</h3>
          
          <div class="space-y-6">
            <div class="flex items-start">
              <div class="w-12 h-12 bg-blue-600 rounded-lg flex items-center justify-center mr-4 flex-shrink-0">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-lg mb-2">Oficina Principal</h4>
                <p class="text-gray-300">Santiago, Chile</p>
                <p class="text-gray-300">Presencia internacional en España, Perú e Italia</p>
              </div>
            </div>
            
            <div class="flex items-start">
              <div class="w-12 h-12 bg-blue-600 rounded-lg flex items-center justify-center mr-4 flex-shrink-0">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-lg mb-2">Email</h4>
                <p class="text-gray-300">contacto@globaltechquality.com</p>
                <p class="text-gray-300">info@globaltechquality.com</p>
              </div>
            </div>
            
            <div class="flex items-start">
              <div class="w-12 h-12 bg-blue-600 rounded-lg flex items-center justify-center mr-4 flex-shrink-0">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-line极客时间cap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-lg mb-2">Horario de Atención</h4>
                <p class="text-gray-300">Lunes a Viernes: 9:00 - 18:00</p>
                <p class="text-gray-300">Sábados: 9:00 - 13:00</p>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Componente de formulario -->
        <ContactForm />
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer class="bg-slate-800 text-white py-12 px-6 lg:px-8">
    <div class="max-w-7xl mx-auto">
      <div class="grid md:grid-cols-4 gap-8 mb-8">
        <div class="md:col-span-2">
          <h3 class="text-2xl font-bold mb-4">
            <span class="text-blue-400">Global</span> Technology Quality
          </h3>
          <p class="text-gray-300 mb-4 max-w-md">
            Consultoría especializada en sistemas de gestión ISO con presencia internacional. Más de 15 años ayudando a organizaciones a alcanzar la excelencia operacional.
          </p>
          <div class="flex space-x-4">
            <a href="#" class="w-10 h-10 bg-blue-600 rounded-lg flex items-center justify-center hover:bg-blue-700 transition-colors duration-200">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"/>
              </svg>
            </a>
            <a href="#" class="w-10 h-10 bg-blue-600 rounded-lg flex items-center justify-center hover:极客时间bg-blue-700 transition-colors duration-200">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            </a>
          </div>
        </div>
        
        <div>
          <h4 class="font-semibold text-lg mb-4">Servicios</h4>
          <ul class="space-y-2 text-gray-300">
            <li><a href="#servicios" class="hover:text-white transition-colors duration-200">Auditoría ISO</a></li>
            <li><a href="#servicios" class="hover:text-white transition-colors duration-200">Implementación</a></li>
            <li><a href="#servicios" class="hover:text-white transition-colors duration-200">Capacitación</a></li>
            <li><a href="#servicios" class="hover:text-white transition-colors duration-200">Consultoría</a></li>
          </ul>
        </div>
        
        <div>
          <h4 class="font-semibold text-lg mb-4">Empresa</h4>
          <ul class="space-y-2 text-gray-300">
            <li><a href="#nosotros" class="hover:text-white transition-colors duration-200">Nosotros</a></li>
            <li><a href="#contacto" class="hover:text-white transition-colors duration-200">Contacto</a></li>
            <li><a href="#" class="hover:text-white transition-colors duration-200">Casos de Éxito</a></li>
            <li><a href="#" class="hover:text-white transition-colors duration-200">Blog</a></li>
          </ul>
        </div>
      </div>
      
      <div class="border-t border-gray-700 pt-8 text-center">

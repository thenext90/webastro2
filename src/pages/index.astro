        mobileMenuButton.addEventListener('click', function() {
          mobileMenu.classList.toggle('hidden');
          this.setAttribute('aria-expanded', mobileMenu.classList.contains('hidden') ? 'false' : 'true');
        });
        
        // Form Validation
        const contactForm = document.getElementById('contact-form');
        const formMessage = document.getElementById('form-message');
        const submitText = document.getElementById('submit-text');
        const submitSpinner = document.getElementById('submit-spinner');
        
        if (contactForm) {
          contactForm.addEventListener('submit', function(e) {
            e.preventDefault();
            
            // Mostrar spinner
            submitText.textContent = 'Enviando...';
            submitSpinner.classList.remove('hidden');
            
            // Validación básica
            const nombre = document.getElementById('nombre').value;
            const email = document.getElementById('email').value;
            const servicio = document.getElementById('servicio').value;
            const privacy = document.getElementById('privacy').checked;
            
            if (!nombre || !email || !servicio || !privacy) {
              showFormMessage('Por favor complete todos los campos requeridos', 'error');
              submitText.textContent = 'Solicitar Consulta';
              submitSpinner.classList.add('hidden');
              return;
            }
            
            // Simular envío exitoso (en producción se conectaría a Bolt.new)
            setTimeout(() => {
              showFormMessage('¡Gracias por su mensaje! Nos pondremos en contacto pronto', 'success');
              contactForm.reset();
              submitText.textContent = 'Solicitar Consulta';
              submitSpinner.classList.add('hidden');
            }, 1500);
          });
        }
        
        function showFormMessage(message, type) {
          formMessage.textContent = message;
          formMessage.className = 'p-4 rounded-lg block';
          
          if (type === 'error') {
            formMessage.classList.add('bg-red-100', 'text-red-700');
          } else if (type === 'success') {
            formMessage.classList.add('bg-green-100', 'text-green-700');
          }
        }
        
        // Scroll to Top Button
        const backToTopBtn = document.createElement('button');
        backToTopBtn.innerHTML = '↑';
        backToTopBtn.id = 'back-to-top';
        backToTopBtn.className = 'fixed bottom-8 right-8 p-3 bg-blue-700 text-white rounded-full shadow-lg hover:bg-blue-800 transition-all duration-300 opacity-0 invisible z-50';
